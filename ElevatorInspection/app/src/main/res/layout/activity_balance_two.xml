<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="50sp"
        android:textAlignment="center"
        android:text="电梯曳引性能测试仪"
        android:textColor="#ABC"
        android:id="@+id/two_tvTitle"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:id="@+id/two_btnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/two_tvTitle"
        android:orientation="vertical">

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="接线示意图"
            android:textColor="#ABC"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_margin="5dp"
            android:background="@drawable/shape_layout_border"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="500dp"
                android:layout_height="344dp"
                android:background="@drawable/connect"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnBalanceThree"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="接线完成，下一步"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btnBalanceTwoBack"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="返回上一层"
            android:textSize="35sp" />
    </LinearLayout>
</RelativeLayout>